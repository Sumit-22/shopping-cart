        android:theme="@style/Theme.Blinkshop"
        tools:targetApi="31">
        <activity
            android:name=".activity.OrderPlaceActivity"
            android:exported="false" />
        <activity
            android:name=".activity.UsersMainActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AuthMainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="rzp_test_xrwNXqW1Fu0Jcw"
            />

       <!-- <meta-data android:name="com.phonepe.android.sdk.AppId" android:value="appId"/> -->

        <service
            android:name=".NotificationService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>