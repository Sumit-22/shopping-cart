<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/yellow"
    android:layout_height="match_parent"
    tools:context=".auth.SplashFragment">


    <LinearLayout
        android:id="@+id/llSplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.288">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBlinkit"
                android:layout_width="wrap_content"
                android:layout_height="97.00dp"
                android:text="Quickify"
                android:textColor="@color/black"
                android:textSize="78.00sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itpart"
                android:layout_width="wrap_content"
                android:layout_height="97.00dp"
                android:layout_gravity=""
                android:text="it"
                android:textColor="@color/green"
                android:textSize="78.00sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="234.00dp"
            android:layout_height="2.60dp"
            android:layout_marginTop="12.00dp"
            android:layout_weight="3"
            android:background="#7b7777" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="India\'s last minute app"
            android:textColor="@color/black"
            android:textSize="19.50sp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>