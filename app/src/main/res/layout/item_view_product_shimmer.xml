<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2.60dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvProduct1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="13.00dp"
        android:layout_weight="0.5"
        android:elevation="3dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3.00dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/ivImageSlider"
                android:layout_width="wrap_content"
                android:layout_height="86.00dp"
                app:iss_auto_cycle="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/rounded_background"
                app:iss_text_align="CENTER"/>
            <TextView
                android:id="@+id/tvProductTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:background="@drawable/rounded_background"
                android:ellipsize="end"
                android:textSize="14.50sp"
                />
            <TextView
                android:id="@+id/tvProductQuantity1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:textSize="12.60sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvProductPrice1"
                        android:layout_width="29dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_background"
                        android:textSize="13.60sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tvAdd1"
                        android:layout_width="45.00dp"
                        android:layout_height="27dp"
                        android:background="@drawable/rounded_background"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="14.30sp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvProduct2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="13.00dp"
            android:layout_weight="0.5"
            android:elevation="3dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3.00dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/ivImageSlider2"
                    android:layout_width="wrap_content"
                    android:layout_height="86.00dp"
                    app:iss_auto_cycle="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/rounded_background"
                    app:iss_text_align="CENTER"/>
                <TextView
                    android:id="@+id/tvProductTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:background="@drawable/rounded_background"
                    android:ellipsize="end"
                    android:textSize="14.50sp"
                    />
                <TextView
                    android:id="@+id/tvProductQuantity2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_background"
                    android:textSize="12.60sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvProductPrice2"
                            android:layout_width="29dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_background"
                            android:textSize="13.60sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <TextView
                            android:id="@+id/tvAdd2"
                            android:layout_width="45.00dp"
                            android:layout_height="27dp"
                            android:background="@drawable/rounded_background"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textSize="14.30sp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>