<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1.60dp"
    android:id="@+id/mainBG">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="1dp"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivCategoryImage"
            android:layout_width="60.00dp"
            android:layout_height="60.00dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:background="@drawable/bg_category"
            android:src="@drawable/vegetable"/>
        <TextView
            android:id="@+id/tvCategoryTitle"
            android:layout_width="78.00dp"
            android:layout_height="40dp"
            android:maxLines="2"
            android:layout_marginTop="3.50dp"
            android:gravity="center"
            android:ellipsize="end"
            android:text="Vegitables and Fruits"
            android:textSize="@dimen/_9ssp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <View
        android:id="@+id/greenIndicator"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/_6sdp"
        android:background="@color/green"
        android:visibility="invisible"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>